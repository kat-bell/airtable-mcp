{
  "name": "@rashidazarang/airtable-mcp",
  "version": "3.1.0",
  "description": "Advanced AI-powered Airtable MCP server with TypeScript support, intelligent analytics, predictive modeling, and enterprise automation capabilities",
  "main": "airtable_simple_production.js",
  "exports": {
    ".": {
      "import": "./dist/airtable-mcp-server.js",
      "require": "./airtable_simple_production.js",
      "types": "./types/index.d.ts"
    },
    "./types": "./types/index.d.ts",
    "./types/*": "./types/*.d.ts"
  },
  "bin": {
    "airtable-mcp": "./airtable_simple_production.js",
    "airtable-mcp-ts": "./dist/airtable-mcp-server.js"
  },
  "scripts": {
    "start": "node airtable_simple_production.js",
    "start:ts": "node dist/airtable-mcp-server.js",
    "start:python": "python3.10 inspector_server.py",
    "test": "node test_direct_api.js",
    "test:mcp": "node test_mcp_comprehensive.js",
    "test:quick": "./quick_test.sh",
    "test:types": "tsc --noEmit",
    "test:ts": "npm run build && node dist/test-suite.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "node airtable_simple_production.js --token YOUR_TOKEN --base YOUR_BASE_ID",
    "dev:ts": "npm run build && npm run start:ts",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "release:publish": "changeset publish",
    "changeset": "changeset",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "docs:build": "redoc build docs/openapi.yaml --output docs/api.html",
    "docs:serve": "redoc serve docs/openapi.yaml --watch"
  },
  "keywords": [
    "airtable",
    "mcp",
    "claude",
    "claude-desktop",
    "anthropic",
    "ai",
    "database",
    "typescript",
    "types"
  ],
  "files": [
    "airtable_simple.js",
    "airtable_simple_production.js",
    "dist/",
    "types/",
    "README.md",
    "LICENSE",
    "package.json",
    "tsconfig.json",
    "examples/",
    "bin/"
  ],
  "types": "types/index.d.ts",
  "author": "Rashid Azarang",
  "license": "MIT",
  "dependencies": {
    "@smithery/cli": "^1.0.0",
    "airtable": "^0.12.2",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.34.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^16.1.5",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rashidazarang/airtable-mcp"
  },
  "bugs": {
    "url": "https://github.com/rashidazarang/airtable-mcp/issues"
  },
  "homepage": "https://github.com/rashidazarang/airtable-mcp#readme"
}
